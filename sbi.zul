   <style>
        .circle-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 400px; /* Adjust height as needed */
        }

        .loan-circle {
            width: 150px; /* Size of each circle */
            height: 150px;
            border-radius: 50%; /* Make it a circle */
            background-color: #f0f0f0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 20px; /* Adjust spacing between circles */
        }

        .loan-type {
            font-weight: bold;
            font-size: 18px;
            margin-top: 10px;
        }

        .interest-range {
            font-size: 14px;
            color: #666;
        }
    </style>

    <label pre="true" value="STATE BANK OF INDIA" class="bankname" style="text-align: center;"/>

    <div class="circle-container">
        <div class="loan-circle" onClick="showLoan('Personal Loan', '10.50')">
            <label value="Personal Loan" class="loan-type" />
            <label value="Interest: 10.50%" class="interest-range" />
        </div>
        <div class="loan-circle" onClick="showLoan('Home Loan', '8.00')">
            <label value="Home Loan" class="loan-type" />
            <label value="Interest: 8.00%" class="interest-range" />
        </div>
        <div class="loan-circle" onClick="showLoan('Gold Loan', '7.50')">
            <label value="Gold Loan" class="loan-type" />
            <label value="Interest: 7.50%" class="interest-range" />
        </div>
        <div class="loan-circle" onClick="showLoan('Education Loan', '7.75')">
            <label value="Education Loan" class="loan-type" />
            <label value="Interest: 7.75%" class="interest-range" />
        </div>
        <div class="loan-circle" onClick="showLoan('Vehicle Loan', '9.00')">
            <label value="Vehicle Loan" class="loan-type" />

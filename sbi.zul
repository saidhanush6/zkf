        </div>
        <div class="loan-circle" onClick="showLoan('Agriculture Loan', '7.00')">
            <label value="Agriculture Loan" class="loan-type" />
            <label value="Interest: 7.00%" class="interest-range" />
        </div>
    </div>

    <label id="bestLoanLabel" pre="true" value="BEST LOAN TYPE :AGRICULTURE LOAN " class="best"/>

